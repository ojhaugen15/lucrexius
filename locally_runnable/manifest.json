{
 "manifest_version": 3,
 "name": "lucreXius",
 "version": "1.0",
 "description": "Convert ancient latin manuscript text at Perseus Digital Library, Latin Library, and PHI Latin Texts to its traditional form",
 "action": {
  "default_icon": {
   "16": "logo/logo-16.png",
   "48": "logo/logo-48.png",
   "128": "logo/logo-128.png"
  },
  "default_title": "lucreXius"
 },
 "background": {
  "scripts": [ "background.js" ]
 },
 "content_scripts": [
  {
   "matches": ["https://scaife.perseus.org/reader/*", "https://www.thelatinlibrary.com/*", "https://latin.packhum.org/*"],
   "js": ["content-script.js"]
  }
 ],
 "browser_specific_settings": {
  "gecko": {
   "id": "@ojhaugen15",
   "strict_min_version": "58.0",
   "data_collection_permissions": {
      "required": ["none"],
      "optional": []
    }
  }
}
}